<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2" >
      <div class="panel panel-default">
        <div class="panel-heading">This is the Quote</div>
        <div class="panel-body">
          <p class="quote-text text-center">
            "<%= @quote.quote %>"
          </p>
          <br/>
          <p class="text-right"><em>source: <%= @quote.source %></em></p>
        </div>
        <div class="panel-footer">
          <%= link_to "edit Quote", edit_quote_path(@quote), class: "btn btn-warning" %>
          <%= link_to "Delete Quote", quote_path, method: :delete, data: {confirm: "Are you sure to delete this quote?"}, class: "btn btn-danger" %>
          <%= link_to "Show all Quotes", quotes_path, class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
</div>
